{% extends 'base.html.twig' %}

{% block title %} Espace Membre LH {% endblock %}

{% block stylesheets %}
    <link
            href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
            rel="stylesheet"
    />

    <style>
        body {
            padding: 0;
            margin: 0;
            font-family: "Nunito", sans-serif;
        }

        .user-dashboard-container {
            width: 70%;
            margin: 0 auto;
            display: flex;
            align-items: center;
        }

        .user-dashboard-logo-container {
            flex: 1 1 auto;
            padding: 1rem;
            text-align: center;
        }

        .user-dashboard-nav {
            flex: 4 1 auto;
            padding: 1rem;
        }

        .user-dashboard-logo {
            max-width: 100%;
            height: 35px;
            object-fit: cover;
        }

        /*Nav*/
        .url-user-dashboard {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }

        .url-user-dashboard > li {
            list-style: none;
        }

        .url-user-dashboard > li > a {
            text-decoration: none;
            color: #013289;
            margin: 0 1rem;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .url-user-dashboard > li > a > svg {
            margin-right: 5px;
        }

        .url-user-dashboard > li > a:hover {
            color: #4154f1;
            transition: ease-in-out;
        }

        /*Connected as*/
        .connected-as-user {
            color: #013289;
        }

        .username-user-dashboard {
            color: #51B868;
        }

        .disconnect-user-dashboard {
            padding: 6px;
            background: #fff6f6;
            border-radius: 12px;
            color: #DC3545;
        }

        .disconnect-user-dashboard:hover {
            padding: 6px;
            background: #DC3545;
            border-radius: 12px;
            color: white;
            transition: ease-in-out;
        }

        @media (max-width: 1421px) {
            .user-dashboard-container {
                flex-direction: column;
            }
        }

        @media (max-width: 1071px) {
            .user-dashboard-container {
                flex-direction: column;
            }

            .user-dashboard-container {
                width: 100%;
            }
        }

        @media (max-width: 440px) {
            .user-dashboard-container {
                flex-direction: column;
            }

            .url-user-dashboard {
                flex-direction: column;
            }
        }


    </style>
{% endblock %}

{% block body %}

