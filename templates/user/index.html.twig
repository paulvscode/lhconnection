          crossorigin="anonymous"/>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">

    <style>
        body {
            padding: 0;
            margin: 0;
            font-family: "Nunito", sans-serif;
        }

        .pane-left {
            background: rgb(117, 139, 127);
            background: linear-gradient(0deg, rgba(117, 139, 127, 0) 20%, rgba(117, 119, 139,
            0.04523816362482491) 80%);
            border-right: 1px solid #efefef;
            box-shadow: 0px 0px 10px 0px rgba(204, 204, 204, 0.5);
        }

        .pane-right {
            padding-left: 2rem;
            padding-top: 1rem;
        }

        .user-dashboard-logo {
            max-width: 100%;
            height: 35px;
            object-fit: cover;
        }

        .user-dashboard-logo-container {
            margin: 1rem 0;
        }

        .user-dashboard-logo {
            max-width: 100%;
            height: 35px;
            object-fit: cover;
        }

        .container-edition {
            width: 90%;
            margin: 0 auto;
        }

        /*Nav*/
        .user-dashboard-nav {
            margin-top: 2rem;
        }

        .url-user-dashboard {
            padding-left: 0px;
            margin-left: 1rem;
        }

        .url-user-dashboard > li {
            list-style: none;
            margin: 1rem 0;
        }

        .url-user-dashboard > li > a {
            font-size: 1.4rem;
        }

        .url-user-dashboard > li > a > svg {
            margin-right: 1rem;
        }

        .url-user-dashboard > li > a:hover {
            text-decoration: none;
        }

        /*Connected as*/
        .connected-as-user {
            padding: 1rem;
            margin-top: 2rem;
        }

        .username-user-dashboard {
            color: #51B868;
        }

        .new-project-link {
            display: flex;
            flex-direction: row;
            justify-content: space-around;
            align-items: center;
            width: 180px;
        }

        .icon-spec {
            position: relative;
            top: 3px;
        }

        {# Content #}
        .up-subpane-left-dashboard {
            height: fit-content;
        }

        .up-subpane-right-dashboard {
            height: fit-content;
        }

        .subpane-left-dashboard {
            height: fit-content;
            background-color: #eefcf0;
        }

        .subpane-right-dashboard {
            height: fit-content;
            background-color: #eef9fc;
        }

        .ongoing-stat .done-stats {
            display: flex;
            justify-content: center;
            flex-direction: row;
        }

        .statistics {
            text-align: center;
        }

        #scroll-top-button {
            border-radius: 20px;
            background-color: white;
            position: fixed;
            bottom: 15px;
            right: 15px;
            font-size: 1.3rem;
            cursor: pointer;
        }

        #scroll-top-button:hover {
            background-color: #d9d9d9;
        }

        .member-userdashboard-title {
            font-size: 2.5rem;
            text-align: center;
            background-color: #f1f1f2;
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row fill" style="margin: 0">
            <div class="pane-left col-2">
                {% include 'admin/components/leftpane.html.twig' %}
            </div>
            <div class="pane-right col-10">
                <div>
                    <h3 class="member-userdashboard-title">Espace Membre</h3>
                </div>

                <div class="row fill">
                    <div class="col-4">
                        <div>Mon activit√©</div>
                        <div>Projets rejoints : </div>
                        <a class="btn btn-primary" href="#">Liste des projets rejoints</a>
                    </div>
                    <div class="col-4">
                        <a class="btn btn-primary" href="#">Voir tous les projets</a>
                    </div>
                    <div class="col-4">
                        <a class="btn btn-primary" href="#">Voir tous les events</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button onclick="topFunction()" id="scroll-top-button" title="Go to top"><i class="bi bi-arrow-up"></i></button>

    <script>
    mybutton = document.getElementById("scroll-top-button");

    window.onscroll = function() {scrollFunction()};

    function scrollFunction() {
      if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
        mybutton.style.display = "block";
      } else {
        mybutton.style.display = "none";
      }
    }

    function topFunction() {
      document.body.scrollTop = 0; // For Safari
      document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    }
</script>
{% endblock %}
