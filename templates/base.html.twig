<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>{% block title %}LH Connections{% endblock %}</title>
    <meta content="" name="description"/>
    <meta content="" name="keywords"/>

    {% block stylesheets %}
        {# Favicons #}
        <link href="{{ asset('second_ver_assets/assets/img/favilh.png') }}" rel="icon"/>
        <link href="{{ asset('second_ver_assets/assets/img/favilh.png') }}" rel="apple-touch-icon"/>

        {# Google Fonts #}
        <link
                href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
                rel="stylesheet"
        />

        <!-- Vendor CSS Files -->
        <link href="{{ asset('second_ver_assets/assets/vendor/aos/aos.css') }}" rel="stylesheet"/>
        <link
                href="{{ asset('second_ver_assets/assets/vendor/bootstrap/css/bootstrap.min.css') }}"
                rel="stylesheet"
        />

        <link
                href="{{ asset('second_ver_assets/assets/vendor/bootstrap-icons/bootstrap-icons.css') }}"
                rel="stylesheet"
        />

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

        <link
                href="{{ asset('second_ver_assets/assets/vendor/glightbox/css/glightbox.min.css') }}"
                rel="stylesheet"
        />
        <link href="{{ asset('second_ver_assets/assets/vendor/remixicon/remixicon.css') }}" rel="stylesheet"/>
        <link href="{{ asset('second_ver_assets/assets/vendor/swiper/swiper-bundle.min.css') }}" rel="stylesheet"/>

        <!-- Template Main CSS File -->
        <link href="{{ asset('second_ver_assets/assets/css/style.css') }}" rel="stylesheet"/>

    {% endblock %}
</head>

{% block body %}
    <body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top">
        <div
                class="container-fluid container-xl d-flex align-items-center justify-content-between"
        >
            <a href="{{ path('homepage') }}" class="logo d-flex align-items-center">
                <img src="{{ asset('second_ver_assets/assets/img/logolh.png') }}" alt=""/>
            </a>

            <nav id="navbar" class="navbar">
                <ul>
                    <li>
                        <a class="nav-link scrollto active" href="#hero">{{ 'lhconnection.homepage.title' | trans }}</a>
                    </li>
                    <li>
                        <a class="nav-link scrollto" href="#services">{{ 'lhconnection.homepage.event' | trans }}</a>
                    </li>
                    <li><a class="nav-link scrollto" href="#portfolio">{{ 'lhconnection.homepage.project' | trans }}</a>
                    </li>
                    <li><a class="nav-link scrollto" href="#team">{{ 'lhconnection.homepage.team' | trans }}</a></li>
                    <li><a class="nav-link scrollto" href="#contact">{{ 'lhconnection.homepage.contact' | trans }}</a>
                    </li>
                    <li><a id="adhesion-btn" class="nav-link scrollto text-success"
                           href="#membership">{{ 'lhconnection.homepage.membership' | trans }}</a>
                    </li>
                    <li class="dropdown">
                        <a href="#"
                        ><span>{{ 'lhconnection.homepage.resources' | trans }}</span> <i class="bi bi-chevron-down"></i
                            ></a>
                        <ul>
                            <li><a href="{{ path('challenge_lhtampa') }}">Challenge LH - Tampa</a></li>
                            <li><a href="https://www.facebook.com/labellevieinnormandy">La belle vie in Normandy</a>
                            </li>
                            <li class="dropdown">
                                {# <a href="#" #}
                                {# ><span>Guides de nos locaux</span> #}
                                {# <i class="bi bi-chevron-right"></i #}
                                {# ></a> #}
                                {# <ul> #}
                                {# <li><a href="#">Un guide</a></li> #}
                                {# <li><a href="#">Un autre guide</a></li> #}
                                {# </ul> #}
                            </li>
                            <li><a href="https://www.instagram.com/kvscope/">Instagram KvScope</a></li>
                            <li><a href="https://www.facebook.com/groups/2162504153831577">Le Havre English Speakers</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown dropdown-list-language">
                        <a href="#"
                        ><span>{{ locale }}</span><i class="bi bi-chevron-down"></i
                            ></a>
                        <ul class="language-ul-home">
                            {% set current_path = app.request.get('_route') %}
                            <a href="{{ path(current_path, {'_locale': 'fr'}) }}">Français</a>
                            <a href="{{ path(current_path, {'_locale': 'en'}) }}">English</a>
                        </ul>
                    </li>
                    <li class="dropdown dropdown-language-home-mobile">
                        <a href="#"
                        ><span>{{ locale }}</span><i class="bi bi-chevron-down"></i
                            ></a>
                        <ul class="language-ul-home-mobile">
                            {% set current_path = app.request.get('_route') %}
                            <a href="{{ path(current_path, {'_locale': 'fr'}) }}">Français</a>
                            <a href="{{ path(current_path, {'_locale': 'en'}) }}">English</a>
                        </ul>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
            <!-- .navbar -->
        </div>
    </header>
    <!-- End Header -->

    <div style="margin-top: 6rem; text-align: center">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </div>

    <!-- ======= Hero Section ======= -->

    <section id="hero" class="hero d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 d-flex flex-column justify-content-center">
                    <h1 data-aos="fade-up">{{ 'lhconnection.hero.title' | trans }}
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                             class="bi bi-heart-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                        </svg>
                        {{ 'lhconnection.hero.second-title' | trans }}
                    </h1>
                    <h2 data-aos="fade-up" data-aos-delay="400">
                        <p class="text-intro">{{ 'lhconnection.hero.first' | trans }}
                            {{ 'lhconnection.hero.second' | trans }}
                            <br>
                            <br>{{ 'lhconnection.hero.third' | trans }}
                        </p></h2>
                    <div data-aos="fade-up" data-aos-delay="600">
                        <div class="text-center text-lg-start">
                            <a
                                    href="#about"
                                    class="btn-get-started scrollto d-inline-flex align-items-center justify-content-center align-self-center"
                            >
                                <span>{{ 'lhconnection.hero.title-link' | trans }}</span>
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div
                        class="col-lg-6 hero-img"
                        data-aos="zoom-out"
                        data-aos-delay="200"
                >
                    <img
                            src="second_ver_assets/assets/img/bgdecember.jpg"
                            class="img-fluid image-lh-concrete"
                            alt=""
                    />
                </div>
            </div>
        </div>
    </section>
    <!-- End Hero -->

    <main id="main">
        <!-- ======= About Section ======= -->
        <section id="about" class="about">
            <div class="container" data-aos="fade-up">
                <div class="row gx-0 president-verbatim-container">
                    <div class="col-lg-4 d-flex flex-column justify-content-center president-verbatim-image-container">
                        <img class="president-verbatim-image"
                             src="{{ asset('second_ver_assets/assets/img/Peggy-Labat-English-n-Stuff-portrait-0.png') }}"
                             alt="">
                    </div>
                    <div class="col-lg-8 d-flex flex-column justify-content-center">
                        <p>
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                                 class="bi bi-quote" viewBox="0 0 16 16">
                                <path d="M12 12a1 1 0 0 0 1-1V8.558a1 1 0 0 0-1-1h-1.388c0-.351.021-.703.062-1.054.062-.372.166-.703.31-.992.145-.29.331-.517.559-.683.227-.186.516-.279.868-.279V3c-.579 0-1.085.124-1.52.372a3.322 3.322 0 0 0-1.085.992 4.92 4.92 0 0 0-.62 1.458A7.712 7.712 0 0 0 9 7.558V11a1 1 0 0 0 1 1h2Zm-6 0a1 1 0 0 0 1-1V8.558a1 1 0 0 0-1-1H4.612c0-.351.021-.703.062-1.054.062-.372.166-.703.31-.992.145-.29.331-.517.559-.683.227-.186.516-.279.868-.279V3c-.579 0-1.085.124-1.52.372a3.322 3.322 0 0 0-1.085.992 4.92 4.92 0 0 0-.62 1.458A7.712 7.712 0 0 0 3 7.558V11a1 1 0 0 0 1 1h2Z"/>
                            </svg>
                            <br>{{ 'lhconnection.president.goal-main-first' | trans }}
                            : {{ 'lhconnection.president.goal-main-second' | trans }}
                        <h3>Peggy Labat</h3>
                        {{ 'lhconnection.president.role' | trans }}
                        </p>
                    </div>
                </div>


                <div class="row gx-0">
                    <div
                            class="col-lg-6 d-flex flex-column justify-content-center"
                            data-aos="fade-up"
                            data-aos-delay="200"
                    >
                        <div class="content">
                            <h3>{{ 'lhconnection.goals.title' | trans }} : </h3>
                            <p>
                            <ul class="ul-bullets-objectives">
                                <li>
                                    <b>{{ 'lhconnection.goals.first-title' | trans }}</b> {{ 'lhconnection.goals.first' | trans }}
                                </li>
                                <li>
                                    <b>{{ 'lhconnection.goals.second-title' | trans }}</b> {{ 'lhconnection.goals.second' | trans }}
                                </li>
                                <li>
                                    <b>{{ 'lhconnection.goals.third-title' | trans }}</b> {{ 'lhconnection.goals.third' | trans }}
                                </li>
                                <li>
                                    <b>{{ 'lhconnection.goals.fourth-title' | trans }}</b> {{ 'lhconnection.goals.fourth' | trans }}
                                </li>
                                <li>
                                    <b>{{ 'lhconnection.goals.fifth-title' | trans }}</b> {{ 'lhconnection.goals.fifth' | trans }}
                                </li>
                            </ul>
                            </p>
                        </div>
                    </div>

                    <div
                            class="col-lg-6 d-flex align-items-center"
                            data-aos="zoom-out"
                            data-aos-delay="200"
                    >
                        <img src="{{ asset('second_ver_assets/assets/img/Temporary-Pict.jpg') }}" class="img-fluid"
                             alt=""/>
                    </div>
                </div>
            </div>
        </section>
        <!-- End About Section -->

        <!-- ======= Social Events Section ======= -->
        <section id="services" class="services">
            <div class="container" data-aos="fade-up">
                <header class="section-header">
                    <h2>{{ 'lhconnection.events.title' | trans }}</h2>
                    <p>{{ 'lhconnection.events.description' | trans }}</p>
                </header>

                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 d-flex align-items-center justify-content-center">
                            {% for news in onlineNews %}
                                <div class="card" style="width: 18rem; margin: 1rem; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px; ">
                                    <img src="https://www.lehavre.fr/sites/default/files/styles/content/public/thumbnails/image/tampa-skyline-jumelage.jpg?itok=2lMx0Iz2" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ news.title }}</h5>
                                        <p class="card-text">{{ news.description }}</p>
                                        <a href="#" class="btn btn-primary">{{ news.link }}</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Social Events Section -->

