        <!-- ======= Club Section ======= -->
        <section id="portfolio" class="portfolio">
            <div class="container" data-aos="fade-up">
                <header class="section-header">
                    <h2>{{ 'lhconnection.projects.title' | trans }}</h2>
                    <div class="surcharge-fontsize">{{ 'lhconnection.projects.description' | trans }}</div>
                </header>
                <div class="club-container" style="justify-content: center;">
                    {% if app.request.getLocale() is same as('fr') %}
                        {% for club in onlineClubs %}
                            <div class="card" style="width: 18rem; margin: 1rem; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
                                <img src="{{ asset('second_ver_assets/assets/img/' ~ club.imageName) }}" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">{{ club.name }}</h5>
                                    <p class="card-text">{{ club.description }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        {% for club in onlineClubs %}
                            <div class="card" style="width: 18rem; margin: 1rem; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
                                <img src="{{ asset('second_ver_assets/assets/img/' ~ club.imageName) }}" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">{{ club.name }}</h5>
                                    <p class="card-text">{{ club.longDescription }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}

                </div>
            </div>
        </section>
        <!-- End Club Section -->

        <!-- ======= Team Section ======= -->
        <section id="team" class="team">
            <div class="container" data-aos="fade-up">
                <header class="section-header">
                    <h2>{{ 'lhconnection.team.title' | trans }}</h2>
                    <div class="surcharge-fontsize">
                        {{ 'lhconnection.team.description' | trans }} :
                        {{ 'lhconnection.team.description-second' | trans }}
                    </div>
                </header>

                <div class="row gy-4">
                    {% for responsible in responsibles %}
                        <div
                                class="col-lg-3 col-md-6 d-flex align-items-stretch"
                                data-aos="fade-up"
                                data-aos-delay="100"
                        >
                            <div class="member">
                                <div class="member-img">
                                    <img
                                            src="{{ asset('second_ver_assets/assets/img/team/' ~ responsible.image ) }}"
                                            class="img-fluid"
                                            alt=""
                                    />
                                </div>
                                <div class="member-info">
                                    <h4 class="text-capitalize">{{ responsible.name }}</h4>
                                    <span class="text-capitalize">{{ responsible.title }}</span>
                                    <p>
                                        {# {{ responsible.description | raw }} #}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        <!-- End Team Section -->

        <!-- ======= Partners Section ======= -->
        <section id="testimonials" class="testimonials">

            <div class="container" data-aos="fade-up">

                <header class="section-header">
                    <h2>{{ 'lhconnection.partners.title' | trans }}</h2>
                    <p>{{ 'lhconnection.partners.description' | trans }}</p>
                </header>

                <div class="testimonials-slider swiper" data-aos="fade-up" data-aos-delay="200">
                    <div class="swiper-wrapper partners-container-main">

                        <div class="partners-container">
                            <img src="{{ asset('second_ver_assets/assets/img/lhlogo.jpg') }}" class="testimonial-img"
                                 alt="Logo lH">
                            <img src="{{ asset('second_ver_assets/assets/img/southamptonlogo.jpg') }}"
                                 class="testimonial-img"
                                 alt="logo SOUTHAMPTON">
                            <img src="{{ asset('second_ver_assets/assets/img/tampalogo.jpg') }}" class="testimonial-img"
                                 alt="logo TAMPA">
                        </div>

                    </div>
                    <div class="swiper-pagination"></div>
                </div>

            </div>

        </section><!-- End Partners Section -->

        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up">
                <header class="section-header">
                    <h2>{{ 'lhconnection.contact.title' | trans }}</h2>
                    <p>{{ 'lhconnection.contact.description' | trans }}</p>
                </header>

                <div class="row gy-4">
                    <div class="col-lg-3"></div>

                    <div class="col-lg-6">
                        <form
                                action="{{ path('email') }}"
                                method="post"
                                class="php-email-form form-box-shadow"
                        >
                            <div class="row gy-4">
                                {# <input type="hidden" name="_captcha" value="false"> #}
                                {# <input type="hidden" name="_next" value="https://lhconnections.com"> #}
                                <div class="col-md-6">
                                    <input
                                            type="text"
                                            name="name"
                                            class="form-control"
                                            placeholder="Your Name"
                                            required

                                    />
                                </div>

                                <div class="col-md-6">
                                    <input
                                            type="email"
                                            class="form-control"
                                            name="email"
                                            placeholder="Your Email"
                                            required
                                    />
                                </div>

                                <div class="col-md-12">
                                    <input
                                            type="text"
                                            id="form-subject-id"
                                            class="form-control"
                                            name="subject"
                                            placeholder="Subject"
                                            required
                                    />
                                </div>

                                <label class="comment">Comment</label>
                                <input id="imabot" name="comment"
                                       pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
                                       placeholder="votre commentaire">

                                <div class="col-md-12">
                    <textarea
                            class="form-control"
                            id="form-message-id"
                            name="message"
                            rows="6"
                            placeholder="Message"
                            required
                    ></textarea>
                                </div>

                                <div class="col-md-12 text-center">
                                    <div class="loading">Loading</div>
                                    <div class="error-message"></div>
                                    <div class="sent-message">
                                        Your message has been sent. Thank you!
                                    </div>

                                    {# <div class="inscription-topic"> #}
                                    {# <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" #}
                                    {# fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16"> #}
                                    {# <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/> #}
                                    {# <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/> #}
                                    {# </svg> {{ 'lhconnection.contact.fees' | trans }}</div> #}
                                    <button id="form-button-id"
                                            type="submit">{{ 'lhconnection.form.submit' | trans }}</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
        </section>
        <!-- End Contact Section -->

        <!-- ======= Membership Section ======= -->
        <section id="membership" class="contact">
            <div class="container" data-aos="fade-up">
                <header class="section-header remove-spacer">
                    <h2>{{ 'lhconnection.membership.title' | trans }}</h2>
                    <p>{{ 'lhconnection.membership.description' | trans }}</p>
                </header>
                <div class="process-subscription">
                    <h4>Voici les différentes étapes:</h4>
                    <div class="subdiv-process-subscription">
                        <div class="sub-subdiv-process-subscription">
                            <div class="icon-subscription">1</div>
                            <div class="label-subscription">{{ 'lhconnection.membershipprocess.one' | trans }}</div>
                        </div>
                        <div class="sub-subdiv-process-subscription">
                            <div class="icon-subscription">2</div>
                            <div class="label-subscription">{{ 'lhconnection.membershipprocess.two' | trans }}</div>
                        </div>
                        <div class="sub-subdiv-process-subscription">
                            <div class="icon-subscription">3</div>
                            <div class="label-subscription">{{ 'lhconnection.membershipprocess.three' | trans }}</div>
                        </div>
                        <div class="sub-subdiv-process-subscription">
                            <div class="icon-subscription">4</div>
                            <div class="label-subscription">{{ 'lhconnection.membershipprocess.four' | trans }}</div>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <a href="{{ asset('/second_ver_assets/assets/adhesion-lh.docx') }}"
                       class="adhesion-button">{{ 'lhconnection.membership.btn' | trans }}</a>
                </div>
            </div>
        </section>
        <!-- End Membership Section -->
    </main>
    <!-- End #main -->

    <!-- ======= F.A.Q Section ======= -->
    <section id="faq" class="faq">
        <div class="container" data-aos="fade-up">
            <header class="section-header">
                <h2>F.A.Q</h2>
                <p>{{ 'lhconnection.faq.description' | trans }}</p>
            </header>

            <div class="row">
                <div class="col-lg-6">
                    <!-- F.A.Q List 1-->
                    <div class="accordion accordion-flush" id="faqlist1">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button
                                        class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#faq-content-1"
                                >
                                    Est-ce que le site aura une version anglaise ?
                                </button>
                            </h2>
                            <div
                                    id="faq-content-1"
                                    class="accordion-collapse collapse"
                                    data-bs-parent="#faqlist1"
                            >
                                <div class="accordion-body">
                                    C'est fait !
                                </div>
                            </div>
