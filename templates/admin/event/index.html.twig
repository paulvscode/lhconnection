{% extends 'base.html.twig' %}

{% block title %}Edition Évènements{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="p-2">Gérer les Évènements </h2>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td class="align-middle">{{ event.title }}</td>
                    <td>
                        <a href="{{ path('admin_event_edit', {id: event.id}) }}"
                           class="btn btn-secondary">Editer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('admin_index') }}">Retour</a>
        <a class="btn btn-success" href="{{ path('admin_event_create') }}">Ajouter un évènement</a>
    </div>
{% endblock %}
