                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('admin_index') }}">Retour</a>
        <a class="btn btn-success" href="{{ path('admin_article_create') }}">Ajouter un article</a>
    </div>
{% endblock %}
